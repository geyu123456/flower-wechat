.body{
   display: flex;
  flex-direction: column;
  align-items: flex-start;
  width: 100% ;
}
.head{
   display: flex;
  flex-direction: column;
  align-items: flex-start;
  height: 400rpx;
  width: 100%;
}
.swiper {
  height: 400rpx;
  width: 100%;
}
.swiper image {
  height: 100%;
  width: 100%;
}
.main {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 
.flower_item{
 
	display: flex;
	padding: 15px;
  width: 100%;
  flex-direction: row;
	
	align-items: flex-start;
	border-bottom: 1px solid #dadada;
}
.flower_item_pic{
  display: flex;
	width: 100px;
	margin-right: 5px;
  height: 100%;
}

.flower_item_pic image{
  width: 100%;
	height: 80px;
	vertical-align: -2px;
}
.flower_item_text{
 display: flex;
 flex-direction: column;
}
.flower_item_text_name{
  display: inline-block;

}
.flower_item_text_price{
  display: inline-block;

}
